/* pages/about/about.wxss */
about-page{
  width: 100%;
}
.userinfo{
   width: 100%;
   background-image: linear-gradient(to bottom,rgb(19, 114, 19),rgb(105, 167, 105)) ;
   text-align: center;
}
.userinfo image{
  width: 90px;
  height: 90px;
  border-radius: 50%;
  margin: 20px 60px;
}
.userinfo button{
  bottom: 10px;
  border-radius: 50px;
}
.user-text{
  border-left: 2px solid green;

  padding: 4px 4px;
  font-size: large;
  font-weight: 600;
  margin: 4px 0;
  position: relative;
}
.film-list{
  width: 90px;
  padding: 0 6px;
}

.film-list image{
  width: 100%;
  height: 120px;
  border-radius:5%;
}
.like-list{
  display: inline-block;
  width: 120px;
  padding: 0 12px;
  box-sizing: border-box;
}
.like-list button{
  width: 90px;
  height: 30px;
  display: block;
}
.user-likes{
  text-align: center;
}
.user-ti{
  text-align: center;
  color: rgb(180, 117, 35);
}

  
