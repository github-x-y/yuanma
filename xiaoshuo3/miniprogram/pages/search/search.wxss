/* miniprogram/pages/search.wxss */
.search{
  width: 80%;
  margin-top: 10rpx;
  margin-right: 10%;
  margin-left: 10%;
  border: 1rpx solid gainsboro;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  padding: 10rpx 20rpx;
}
image{
  width: 40rpx;
  height: 40rpx;
}
input{
  padding: 0 20rpx;
}
.tui{
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.huan text{
   font-size: small;
   position: relative;
   bottom: 10rpx;
}
.tag text{
  margin: 10rpx 10rpx;
  border: 1px solid gray;
  background-color: gray;
  opacity: 0.8;
  border-radius: 50rpx;
  padding: 5px 10rpx;
  display: inline-block;
}
.lishi{
  margin: 30rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.shancu text:first-child{
  font-size: small;
  position: relative;
  bottom: 10rpx;
}
.shancu image{
  width: 40rpx;
  height: 40rpx;
}
